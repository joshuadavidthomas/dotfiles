function is_update_available() {
  # compare local git HEAD to remote git HEAD and return 0 if they are different

  local local_head=$(git -C "${DOTFILES}" rev-parse HEAD)
  
  local remote_head=$(git -C "${DOTFILES}" ls-remote origin HEAD | cut -f 1)

  [[ "$local_head" != "$remote_head" ]]
}

if [[ is_update_available && -n ${DOTFILES_DEBUG} ]]; then
  echo "Update available"
elif [[ -n ${DOTFILES_DEBUG} ]]; then
  echo "No update available"
fi
