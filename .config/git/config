[init]
	defaultBranch = main
[include]
  path = config-local
[alias]
	br = "branch --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(contents:subject) %(color:green)(%(committerdate:relative)) [%(authorname)]' --sort=-committerdate"
	branch-name = "!git rev-parse --abbrev-ref HEAD"
	co = "checkout"
	cob = "checkout -b"
	del = "branch -D"
	exe = "update-index --chmod=+x"
	main = "checkout main"
	patch = "add -p"
	pdiff = "-c 'core.pager=less' diff"
	publish = "!git push -u origin $(git branch-name)"
	runs = "!f() { \
		watch_gha_runs $@ \
			--wait-for-start \
			\"$(git remote get-url origin)\" \
			\"$(git rev-parse --abbrev-ref HEAD)\"; \
		}; f"
	wdiff = "diff --word-diff"
	wip = "commit -am 'wip'"
	wip-reset = "!git reset $(git merge-base origin/main HEAD)"
[branch]
	sort = -committerdate
[core]
	pager = DELTA_FEATURES=+side-by-side delta
	editor = nvim
	sshCommand = ssh.exe
[credential "https://github.com"]
	helper =
	helper = !$(which gh) auth git-credential
[credential "https://gist.github.com"]
	helper =
	helper = !$(which gh) auth git-credential
[delta]
	# https://dandavison.github.io/delta/configuration.html
	hyperlinks = true
	line-numbers = true
	navigate = true
	syntax-theme = Monokai Extended
[diff]
	algorithm = histogram
	colorMoved = default
[help]
	autoCorrect = immediate
[http]
	sslVerify = true
	sslCAInfo = /home/josh/.certs/cacert.pem
[interactive]
	diffFilter = delta --color-only
[merge]
	conflictStyle = zdiff3
[pull]
	rebase = false
[push]
	autoSetupRemote = true
[rerere]
	enabled = true
	autoUpdate = true
[user]
	name = Josh
	email = josh@joshthomas.dev
